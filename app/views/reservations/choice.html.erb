<section>
  <h2>トレーナーを選択</h2>
  <div class="list-container">
  
    <% @teachers.each do |teacher| %>
      <div class="list">
      	<figure><%= image_tag "teacher.jpeg", class: "トレーナーの写真" %></figure>
      	<figure><%= image_tag teacher.teacher_img.url %></figure>
      	<div>
        	<h4><%= link_to teacher.teacher_name, user_teacher_reservations_path(current_user, teacher.id) %></h4>
        	<P>トレーニング実施場所<br>
        	  <%= teacher.teacher_address %>
        	</P>
      	</div>
      </div>
    <% end %>
  </div>
  <!--/.list-container-->
</section>